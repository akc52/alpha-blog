<%= render 'shared/errors', obj: @article %>

<div class="row">
  <div class="col-12">
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form" }) do |f| %>
      <div class='form-group row'>
        <div class='control-label col-2'>
          <%= f.label :title %>
        </div>
        <div class='col-8'>
          <%= f.text_field :title, class: 'form-control', placeholder: 'Title of Article', autofocus: true %>
        </div>
      </div>
      <div class='form-group row'>
        <div class="control-label col-sm-2">
          <%= f.label :description %>
        </div>
        <div class='col-sm-8'>
          <%= f.text_area :description, rols: 10, class: 'form-control', placeholder: 'Body of Article' %>
        </div>
      </div>
      <div class='row'>
        <div class='form-check form-check-inline col-10 offset-2'>
          <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
            <% cb.label(class: "form-check-label input_checkbox") {cb.check_box(class:"checkbox form-check-input") + cb.text} %>
          <% end %>
        </div>
      </div>
      <div class='form-group row'>
        <div class="control-label col-10 offset-2">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>

    <div class="text-center">
      [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
    </div>

  </div>
</div>
