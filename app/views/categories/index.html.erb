<h1 class="text-center">Listing all Categories</h1>
<div class="text-center">
  <% @categories.each do |category| %>
    <ul class="listing">
      <div class="row">
        <div class="card col-md-4 offset-4">
          <li class="article-title">
            <%= link_to "#{category.name}", categories_path(category) %>
          </li>
        </div>
      </div>
    </ul>
  <% end %>
</div>
